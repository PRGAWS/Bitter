{
    "name": "bitter",
    "description": "A serverless twitter clone",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "aws-sdk": "^2.1058.0",
        "npm-run-all": "^4.1.5",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "jest": "^26.6.3"
    },
    "scripts": {
        "test": "jest",
        "deploy": "sam.cmd build --use-container && sam.cmd deploy --guided",
        "build:container": "sam.cmd build --use-container",
        "start:container": "sam.cmd local start-api -t template.yaml --docker-network local-dynamodb --skip-pull-image --profile default --parameter-overrides 'ParameterKey=StageName,ParameterValue=local ParameterKey=DDBTableName,ParameterValue=local-SingleTable' ",
        "db:create_dynamodb": "cd local && cd docker && docker-compose up -d && cd .. && cd ..",
        "db:create_beets_table": "aws dynamodb create-table --cli-input-json file://local/tables/beets.json --endpoint-url http://localhost:8000",
        "db:create_users_table": "aws dynamodb create-table --cli-input-json file://local/tables/users.json --endpoint-url http://localhost:8000",
        "db:create_tables": "run-s db:create_beets_table db:create_users_table",
        "db:list_tables": "aws dynamodb list-tables --endpoint-url http://localhost:8000"
    }
}